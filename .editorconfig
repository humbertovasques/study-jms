root = true

# -----------------------------
# Default settings (all files)
# -----------------------------
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
max_line_length = 100

# -----------------------------
# Java source files
# -----------------------------
[*.java]
indent_size = 4
max_line_length = 120

# -----------------------------
# XML (Spring configs, Maven pom.xml)
# -----------------------------
[*.xml]
indent_size = 4

# -----------------------------
# Properties files
# -----------------------------
[*.properties]
indent_size = 2

# -----------------------------
# Shell scripts
# -----------------------------
[*.sh]
indent_size = 2
end_of_line = lf

# -----------------------------
# JavaScript & JSX
# -----------------------------
[*.{js,jsx}]
indent_size = 2
max_line_length = 100

# -----------------------------
# TypeScript & TSX
# -----------------------------
[*.{ts,tsx}]
indent_size = 2
max_line_length = 100

# -----------------------------
# Test files (Jest / React Testing Library)
# -----------------------------
[*.{test,spec}.{js,jsx,ts,tsx}]
indent_size = 2
max_line_length = 120

# -----------------------------
# JSON
# -----------------------------
[*.json]
indent_size = 2
trim_trailing_whitespace = false

# -----------------------------
# CSS / SCSS / SASS / LESS
# -----------------------------
[*.{css,scss,sass,less}]
indent_size = 2

# -----------------------------
# HTML
# -----------------------------
[*.html]
indent_size = 2

# -----------------------------
# Markdown
# -----------------------------
[*.md]
indent_size = 2
trim_trailing_whitespace = false

# -----------------------------
# Env & Config Files (.env, .gitignore, Docker, etc.)
# -----------------------------
[*.{env,.env,.gitignore}]
indent_size = 2
trim_trailing_whitespace = false

# -----------------------------
# YAML (GitHub Actions, CI/CD)
# -----------------------------
[*.{yml,yaml}]
indent_size = 2

# -----------------------------
# Dockerfile
# -----------------------------
[Dockerfile]
indent_size = 2
trim_trailing_whitespace = false

# -----------------------------
# Prettier / IDE compatibility
# -----------------------------
[*.{js,jsx,ts,tsx,css,scss,sass,less,html,json,md,yml,yaml}]
indent_size = 2
trim_trailing_whitespace = true
